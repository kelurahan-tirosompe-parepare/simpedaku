   <script>
  // Mendapatkan semua item dropdown
  const dropdownItems = document.querySelectorAll(".dropdown-item");

  // Menambahkan event listener ke setiap item dropdown
  dropdownItems.forEach((item) => {
    item.addEventListener("click", function(event) {
      event.preventDefault(); // Mencegah navigasi ke halaman lain

      // Mendapatkan ID item yang diklik
      const itemId = item.getAttribute("id");

      // Mengirim permintaan HTTP ke server (contoh dengan fetch API)
      fetch(`/suket/${itemId}`, {
        method: "POST",
        // Anda dapat menyesuaikan metode, header, dan lainnya sesuai kebutuhan
      })
        .then((response) => {
          if (response.ok) {
            // Handle respons dari server jika sukses
            return response.json(); // Misalnya, mengambil data JSON dari server
          } else {
            throw new Error("Gagal mengambil data dari server");
          }
        })
        .then((data) => {
          // Lakukan sesuatu dengan data yang diterima dari server
          console.log(data);
        })
        .catch((error) => {
          // Handle kesalahan jika permintaan ke server gagal
          console.error(error);
        });
    });
  });
</script>
